/* pages/follow/follow.wxss */
.follow{
    height: 100vh;
    width: 100%;
    background: #f5f5f5
}
.top-box{
    background: #fff;
    padding-top: 50rpx;
    padding-bottom: 40rpx;
    display: block;
    text-align: center;
}
.top-box .num{
    color: #ccc;
}
.top-box text{
    font-size: 28rpx
}
.div{
    display: block;
    text-align: center;
    margin-bottom: 10rpx;
}
image{
    border-radius: 50%;
    width: 80rpx;
    height: 80rpx
}
.bom-box{
    margin-top: 100rpx;
    text-align: center;
    display: block;
}
button{
    background: #f12c20;
    color: #fff;
    width: calc(100% - 60rpx);
    height: 70rpx;
    border: none;
    border-radius: 5rpx;
    font-size: 28rpx
}
button.noclick{
    background: #999;
    opacity: .8;
}